mixin home()
    - var prev = page.prev_link
    - var next = page.next_link
    .paginator
        if page.prev
            a.prev(href=url_for(prev))!= __('prev') 
        if page.next
            a.next(href=url_for(next))!= __('next')

mixin post()
    - var prev = page.prev ? page.prev.path : false;
    - var next = page.next ? page.next.path : false; 
    .paginator_post
        if prev
            a(href=url_for(prev))!= __('prev_post')+'：'+page.prev.title
            br
            //- a.prev(href=url_for(prev))!= page.prev.title
        if next
            a(href=url_for(next))!= __('next_post')+'：'+page.next.title
            //- a.next(href=url_for(next))!= page.next.title